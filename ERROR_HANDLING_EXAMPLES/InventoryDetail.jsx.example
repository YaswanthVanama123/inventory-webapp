import React, { useState, useEffect } from 'react';
import { useParams, useNavigate } from 'react-router-dom';
import inventoryService from '../../services/inventoryService';
import { useAuth } from '../../hooks/useAuth';
import useErrorHandler from '../../hooks/useErrorHandler';
import Card from '../../components/common/Card';
import Button from '../../components/common/Button';
import Badge from '../../components/common/Badge';
import Alert from '../../components/common/Alert';
import LoadingSpinner from '../../components/common/LoadingSpinner';
import Modal from '../../components/common/Modal';

const InventoryDetail = () => {
  const { id } = useParams();
  const navigate = useNavigate();
  const { user, isAdmin, isEmployee } = useAuth();
  const { error, clearError, executeAsync, showSuccess, showWarning } = useErrorHandler();

  // State management
  const [item, setItem] = useState(null);
  const [stockHistory, setStockHistory] = useState([]);
  const [loading, setLoading] = useState(true);
  const [activeTab, setActiveTab] = useState('info');

  // Image gallery state
  const [selectedImage, setSelectedImage] = useState(0);
  const [lightboxOpen, setLightboxOpen] = useState(false);

  // Modal states
  const [updateStockModal, setUpdateStockModal] = useState(false);
  const [uploadImagesModal, setUploadImagesModal] = useState(false);
  const [deleteConfirmModal, setDeleteConfirmModal] = useState(false);

  // Form states
  const [stockQuantity, setStockQuantity] = useState('');
  const [stockAction, setStockAction] = useState('add');
  const [stockReason, setStockReason] = useState('');
  const [selectedFiles, setSelectedFiles] = useState([]);
  const [actionLoading, setActionLoading] = useState(false);

  // Fetch item details and history
  useEffect(() => {
    fetchData();
  }, [id]);

  const fetchData = async () => {
    await executeAsync(
      async () => {
        setLoading(true);

        const [itemResponse, historyResponse] = await Promise.all([
          inventoryService.getById(id),
          inventoryService.getHistory(id),
        ]);

        return { item: itemResponse.data, history: historyResponse.data || [] };
      },
      {
        showToast: false,
        persistError: true,
        customErrorMessage: 'Failed to load item details',
        onSuccess: ({ item, history }) => {
          setItem(item);
          setStockHistory(history);
        },
        onError: (errorInfo) => {
          // Handle 404 specifically
          if (errorInfo.statusCode === 404) {
            showWarning('Item not found. Redirecting...');
            setTimeout(() => navigate('/inventory'), 2000);
          }
        },
        finallyCallback: () => {
          setLoading(false);
        },
      }
    );
  };

  // Handle stock update
  const handleUpdateStock = async () => {
    if (!stockQuantity || parseInt(stockQuantity) <= 0) {
      showWarning('Please enter a valid quantity');
      return;
    }

    await executeAsync(
      async () => {
        setActionLoading(true);

        await inventoryService.updateStock(id, {
          quantity: parseInt(stockQuantity),
          action: stockAction,
          reason: stockReason,
        });

        // Refresh data
        const [itemResponse, historyResponse] = await Promise.all([
          inventoryService.getById(id),
          inventoryService.getHistory(id),
        ]);

        return { item: itemResponse.data, history: historyResponse.data || [] };
      },
      {
        showToast: true,
        persistError: true,
        customErrorMessage: 'Failed to update stock',
        onSuccess: ({ item, history }) => {
          setItem(item);
          setStockHistory(history);
          // Reset form
          setStockQuantity('');
          setStockReason('');
          setUpdateStockModal(false);
          showSuccess('Stock updated successfully');
        },
        finallyCallback: () => {
          setActionLoading(false);
        },
      }
    );
  };

  // Handle image upload
  const handleUploadImages = async () => {
    if (selectedFiles.length === 0) {
      showWarning('Please select at least one image');
      return;
    }

    await executeAsync(
      async () => {
        setActionLoading(true);
        await inventoryService.uploadImages(id, selectedFiles);
        const itemResponse = await inventoryService.getById(id);
        return itemResponse.data;
      },
      {
        showToast: true,
        persistError: true,
        customErrorMessage: 'Failed to upload images',
        onSuccess: (updatedItem) => {
          setItem(updatedItem);
          setSelectedFiles([]);
          setUploadImagesModal(false);
          showSuccess('Images uploaded successfully');
        },
        finallyCallback: () => {
          setActionLoading(false);
        },
      }
    );
  };

  // Handle delete item
  const handleDeleteItem = async () => {
    await executeAsync(
      async () => {
        setActionLoading(true);
        await inventoryService.delete(id);
      },
      {
        showToast: true,
        persistError: false,
        customErrorMessage: 'Failed to delete item',
        onSuccess: () => {
          showSuccess('Item deleted successfully');
          navigate('/inventory');
        },
        onError: () => {
          setDeleteConfirmModal(false);
        },
        finallyCallback: () => {
          setActionLoading(false);
        },
      }
    );
  };

  const handleRetry = () => {
    clearError();
    fetchData();
  };

  // Calculate profit margin
  const calculateProfitMargin = () => {
    if (!item?.purchasePrice || !item?.sellingPrice) return 0;
    const profit = item.sellingPrice - item.purchasePrice;
    return ((profit / item.purchasePrice) * 100).toFixed(2);
  };

  // Get stock badge variant
  const getStockBadgeVariant = () => {
    if (!item) return 'default';
    if (item.currentStock === 0) return 'danger';
    if (item.currentStock <= item.lowStockThreshold) return 'warning';
    return 'success';
  };

  // Check if low stock
  const isLowStock = () => {
    return item && item.currentStock <= item.lowStockThreshold && item.currentStock > 0;
  };

  if (loading) {
    return <LoadingSpinner fullScreen text="Loading item details..." />;
  }

  if (error && !item) {
    return (
      <div className="container mx-auto px-4 py-8">
        <Alert
          variant="danger"
          title="Error Loading Item"
          dismissible
          onDismiss={clearError}
        >
          <div className="space-y-3">
            <p>{error.message}</p>
            <div className="flex gap-3">
              <Button onClick={() => navigate('/inventory')}>
                Back to Inventory
              </Button>
              <Button variant="outline" onClick={handleRetry}>
                <svg className="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Retry
              </Button>
            </div>
          </div>
        </Alert>
      </div>
    );
  }

  if (!item) {
    return (
      <div className="container mx-auto px-4 py-8">
        <Alert variant="warning" title="Not Found">
          Item not found
        </Alert>
        <Button onClick={() => navigate('/inventory')} className="mt-4">
          Back to Inventory
        </Button>
      </div>
    );
  }

  const images = item.images && item.images.length > 0
    ? item.images
    : ['/placeholder-product.png'];

  return (
    <div className="container mx-auto px-4 py-6 sm:py-8">
      {/* Header */}
      <div className="mb-6">
        <Button variant="ghost" onClick={() => navigate('/inventory')} className="mb-4">
          <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 19l-7-7 7-7" />
          </svg>
          Back to Inventory
        </Button>

        <div className="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 className="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">
              {item.itemName}
            </h1>
            <p className="text-sm text-gray-500 dark:text-gray-400 mt-1">
              SKU: {item.skuCode}
            </p>
          </div>

          <div className="flex flex-wrap gap-2">
            {(isEmployee || isAdmin) && (
              <Button
                variant="primary"
                size="sm"
                onClick={() => setUpdateStockModal(true)}
              >
                Update Stock
              </Button>
            )}
            {isAdmin && (
              <>
                <Button
                  variant="outline"
                  size="sm"
                  onClick={() => navigate(`/inventory/edit/${id}`)}
                >
                  Edit Item
                </Button>
                <Button
                  variant="outline"
                  size="sm"
                  onClick={() => setUploadImagesModal(true)}
                >
                  Upload Images
                </Button>
                <Button
                  variant="danger"
                  size="sm"
                  onClick={() => setDeleteConfirmModal(true)}
                >
                  Delete
                </Button>
              </>
            )}
          </div>
        </div>
      </div>

      {/* Low Stock Alert */}
      {isLowStock() && (
        <Alert variant="warning" title="Low Stock Alert" dismissible className="mb-6">
          Current stock ({item.currentStock} units) is below the threshold ({item.lowStockThreshold} units).
          Consider restocking soon.
        </Alert>
      )}

      {item.currentStock === 0 && (
        <Alert variant="danger" title="Out of Stock" dismissible className="mb-6">
          This item is currently out of stock.
        </Alert>
      )}

      {/* Error Alert */}
      {error && (
        <Alert variant="danger" dismissible onDismiss={clearError} className="mb-6">
          {error.message}
        </Alert>
      )}

      {/* Rest of the component remains the same... */}
      {/* (Include all the existing UI code for image gallery, tabs, modals, etc.) */}

    </div>
  );
};

export default InventoryDetail;
